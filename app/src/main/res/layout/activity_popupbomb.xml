<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Popupbomb"
    android:background="@color/renk_darker"
    android:padding="16dp">


    <TextView
        android:id="@+id/txt_skor"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:textSize="30dp"
        android:textAlignment="center" />

    <ImageButton
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/logo"
        android:scaleType="center"
        android:padding="30dp"
        android:id="@+id/btn_yeni"
        android:layout_width="100dp"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@drawable/cell_background"
        android:scaleType="center"
        android:id="@+id/btn_records"
        android:text="Rekorlar"
        android:layout_width="100dp"/>

    <TextView
        android:layout_centerInParent="true"
        android:id="@+id/enyuksek"
        android:layout_width="100dp"
        android:layout_alignParentLeft="true"
        android:layout_height="38dp"
        android:textSize="12dp"
        android:text="En Yüksek Rekorunuz"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold" />


    <TextView
    android:id="@+id/txt_rekor"
    android:layout_width="100dp"
    android:layout_height="50dp"
        android:layout_alignParentLeft="true"
    android:layout_below="@+id/enyuksek"
    android:layout_centerInParent="true"
    android:text="rekor"
    android:textSize="30dp"
    android:textAlignment="center" />


    <TextView
        android:id="@+id/txt_yapılanrekor"
        android:layout_width="100dp"
        android:layout_height="50dp"
       android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:text="rekor"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/yapılan"
        android:textAlignment="center"
        android:textSize="30dp" />

    <TextView
        android:layout_centerInParent="true"
        android:id="@+id/yapılan"
        android:layout_width="100dp"
        android:layout_alignParentRight="true"
        android:layout_height="38dp"
        android:textSize="12dp"
        android:text="Yapılan Rekor"

        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold" />



</RelativeLayout>